<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
<display-name>Archetype Created Web Application</display-name>
    <!--
        注册过滤器一定要在最前面
    -->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.itlaobing.crm.web.filter.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <!--字符过滤器-->
        <filter-name>EncodingFilter</filter-name>
        <!--
            只需要过滤后台，且jsp文件也需要过滤，但是jsp文件已经给我们过滤好了
            如果使用*.后缀名的形式，前面一定不要加"/"
        -->
        <url-pattern>*.do</url-pattern>
    </filter-mapping>
        <!--恶意登录过滤器-->
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>com.itlaobing.crm.web.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>*.do</url-pattern>
        <url-pattern>*.jsp</url-pattern>
        <url-pattern>*.html</url-pattern>
    </filter-mapping>
    <!--User业务-->
    <servlet>
        <servlet-name>UserController</servlet-name>
        <servlet-class>com.itlaobing.crm.settings.web.controller.UserController</servlet-class>
    </servlet>
    <!--Activity业务-->
    <servlet>
        <servlet-name>ActivityController</servlet-name>
        <servlet-class>com.itlaobing.crm.workbench.web.controller.ActivityController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ActivityController</servlet-name>
        <url-pattern>/workbench/activity/QueryUserAll.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserController</servlet-name>
        <url-pattern>/settings/user/login.do</url-pattern>
    </servlet-mapping>
</web-app>
